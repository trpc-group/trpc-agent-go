{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/engine_dsl.schema.json",
  "title": "Engine DSL Schema",
  "description": "JSON Schema for the trpc-agent-go engine DSL (Graph/Node/Edge/etc.).",
  "type": "object",
  "$defs": {
    "Graph": {
      "type": "object",
      "required": ["name", "nodes", "edges", "start_node_id"],
      "properties": {
        "version": {
          "type": "string",
          "description": "Optional DSL version string (e.g., \"1.0\")."
        },
        "name": {
          "type": "string",
          "description": "Graph name (used for display and logging)."
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of the graph."
        },
        "nodes": {
          "type": "array",
          "description": "Executable nodes that make up the graph.",
          "items": { "$ref": "#/$defs/Node" }
        },
        "edges": {
          "type": "array",
          "description": "Direct edges between nodes (unconditional control flow).",
          "items": { "$ref": "#/$defs/Edge" }
        },
        "conditional_edges": {
          "type": "array",
          "description": "Conditional routing edges evaluated after a node finishes.",
          "items": { "$ref": "#/$defs/ConditionalEdge" }
        },
        "state_variables": {
          "type": "array",
          "description": "Graph-level state variables declared by the author.",
          "items": { "$ref": "#/$defs/StateVariable" }
        },
        "start_node_id": {
          "type": "string",
          "description": "ID of the visual start node (usually builtin.start); the executable entry point is derived from its outgoing edge."
        },
        "metadata": {
          "type": "object",
          "description": "Arbitrary graph-level metadata (tags, owner, etc.).",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "BaseNode": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique node identifier within the graph."
        },
        "label": {
          "type": "string",
          "description": "Optional UI label for this node."
        },
        "node_version": {
          "type": "string",
          "description": "Optional component version."
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of what this node does."
        }
      }
    },
    "Node": {
      "type": "object",
      "required": ["id", "node_type"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique node identifier within the graph."
        },
        "label": {
          "type": "string",
          "description": "Optional UI label for this node."
        },
        "node_version": {
          "type": "string",
          "description": "Optional component version."
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of what this node does."
        },
        "node_type": {
          "type": "string",
          "enum": ["builtin.start", "builtin.llmagent", "builtin.end", "builtin.mcp", "builtin.knowledge_search", "builtin.while", "builtin.user_approval", "builtin.transform", "builtin.set_state"],
          "description": "Node type identifier."
        },
        "config": {
          "description": "Node-specific configuration. Required for all node types except builtin.start."
        }
      },
      "allOf": [
        {
          "if": {
            "properties": { "node_type": { "const": "builtin.start" } }
          },
          "then": {
            "properties": {
              "config": {
                "type": "object",
                "description": "Start node has no configurable fields.",
                "additionalProperties": false
              }
            }
          }
        },
        {
          "if": {
            "properties": { "node_type": { "const": "builtin.llmagent" } }
          },
          "then": {
            "required": ["config"],
            "properties": {
              "config": { "$ref": "#/$defs/AgentConfig" }
            }
          }
        },
        {
          "if": {
            "properties": { "node_type": { "const": "builtin.end" } }
          },
          "then": {
            "required": ["config"],
            "properties": {
              "config": { "$ref": "#/$defs/EndConfig" }
            }
          }
        },
        {
          "if": {
            "properties": { "node_type": { "const": "builtin.mcp" } }
          },
          "then": {
            "required": ["config"],
            "properties": {
              "config": { "$ref": "#/$defs/MCPConfig" }
            }
          }
        },
        {
          "if": {
            "properties": { "node_type": { "const": "builtin.knowledge_search" } }
          },
          "then": {
            "required": ["config"],
            "properties": {
              "config": { "$ref": "#/$defs/KnowledgeSearchConfig" }
            }
          }
        },
        {
          "if": {
            "properties": { "node_type": { "const": "builtin.while" } }
          },
          "then": {
            "required": ["config"],
            "properties": {
              "config": { "$ref": "#/$defs/WhileConfig" }
            }
          }
        },
        {
          "if": {
            "properties": { "node_type": { "const": "builtin.user_approval" } }
          },
          "then": {
            "required": ["config"],
            "properties": {
              "config": { "$ref": "#/$defs/UserApprovalConfig" }
            }
          }
        },
        {
          "if": {
            "properties": { "node_type": { "const": "builtin.transform" } }
          },
          "then": {
            "required": ["config"],
            "properties": {
              "config": { "$ref": "#/$defs/TransformConfig" }
            }
          }
        },
        {
          "if": {
            "properties": { "node_type": { "const": "builtin.set_state" } }
          },
          "then": {
            "required": ["config"],
            "properties": {
              "config": { "$ref": "#/$defs/SetStateConfig" }
            }
          }
        }
      ],
      "additionalProperties": false
    },
    "AgentConfig": {
      "type": "object",
      "required": ["model_spec"],
      "properties": {
        "model_spec": {
          "$ref": "#/$defs/ModelSpec",
          "description": "Resolved model specification used by the framework to construct a concrete model instance."
        },
        "instruction": {
          "type": "string",
          "description": "System prompt / instruction for the agent."
        },
        "tools": {
          "type": "array",
          "description": "List of tool specifications available to this agent.",
          "items": { "$ref": "#/$defs/ToolSpec" }
        },
        "output_format": {
          "type": "object",
          "description": "Controls how the agent returns its response (e.g., text vs. JSON).",
          "properties": {
            "type": {
              "type": "string",
              "description": "Output mode for this agent.",
              "enum": ["text", "json"],
              "default": "text"
            },
            "schema": {
              "type": "object",
              "description": "JSON Schema for structured output when type = \"json\".",
              "additionalProperties": true
            }
          },
          "additionalProperties": false
        },
        "planner": {
          "$ref": "#/$defs/PlannerConfig",
          "description": "Optional planner configuration. When specified, enables planning capabilities for this agent."
        },
        "temperature": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 2.0
        },
        "max_tokens": {
          "type": "integer",
          "minimum": 1
        },
        "top_p": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        }
      },
      "additionalProperties": false
    },
    "PlannerConfig": {
      "type": "object",
      "description": "Planner configuration for the agent. WARNING: 'react' planner uses tag-based output which conflicts with structured output (output_format.type='json'). Do not use 'react' planner with structured output.",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["react", "builtin"],
          "description": "Planner type. 'react' uses explicit planning tags (incompatible with structured output). 'builtin' uses model's native thinking capabilities."
        },
        "config": {
          "$ref": "#/$defs/BuiltinPlannerConfig",
          "description": "Planner-specific configuration. Only used when type is 'builtin'."
        }
      },
      "additionalProperties": false
    },
    "BuiltinPlannerConfig": {
      "type": "object",
      "description": "Configuration for builtin planner that uses model's native thinking capabilities.",
      "properties": {
        "reasoning_effort": {
          "type": "string",
          "enum": ["low", "medium", "high"],
          "description": "Reasoning effort for OpenAI o-series models."
        },
        "thinking_enabled": {
          "type": "boolean",
          "description": "Enable thinking mode for Claude/Gemini models."
        },
        "thinking_tokens": {
          "type": "integer",
          "minimum": 1,
          "description": "Max tokens for thinking mode."
        }
      },
      "additionalProperties": false
    },
    "ToolSpec": {
      "type": "object",
      "description": "Unified tool specification. Use 'type' field to specify the tool type.",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["mcp", "web_search", "knowledge_search", "code_interpreter"],
          "description": "Tool type identifier."
        }
      },
      "oneOf": [
        { "$ref": "#/$defs/MCPToolSpec" },
        { "$ref": "#/$defs/WebSearchToolSpec" },
        { "$ref": "#/$defs/KnowledgeSearchToolSpec" },
        { "$ref": "#/$defs/CodeInterpreterToolSpec" }
      ]
    },
    "MCPToolSpec": {
      "type": "object",
      "description": "MCP (Model Context Protocol) tool configuration.",
      "required": ["type", "server_url"],
      "properties": {
        "type": {
          "type": "string",
          "const": "mcp",
          "description": "Tool type identifier."
        },
        "server_url": {
          "type": "string",
          "description": "MCP server URL (e.g., https://mcp.example.com/mcp)."
        },
        "transport": {
          "type": "string",
          "enum": ["streamable_http", "sse"],
          "description": "Transport mechanism for MCP.",
          "default": "streamable_http"
        },
        "server_label": {
          "type": "string",
          "description": "Optional label for this MCP server. Used as a prefix for tool names (e.g., 'deepwiki_read_wiki') to avoid naming conflicts when multiple MCP servers are configured. Note: The prefix is joined with a single underscore."
        },
        "allowed_tools": {
          "type": "array",
          "description": "Optional list of tool names from this MCP server that the agent is allowed to call.",
          "items": { "type": "string" }
        },
        "headers": {
          "type": "object",
          "description": "Optional HTTP headers to include when connecting to the MCP server.",
          "additionalProperties": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "WebSearchToolSpec": {
      "type": "object",
      "description": "Web search tool configuration (DuckDuckGo, Google, etc.).",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "const": "web_search",
          "description": "Tool type identifier."
        },
        "provider": {
          "type": "string",
          "enum": ["duckduckgo", "google", "bing"],
          "description": "Search provider.",
          "default": "duckduckgo"
        },
        "api_key": {
          "type": "string",
          "description": "API key for providers that require it. Supports env:VAR_NAME format."
        },
        "max_results": {
          "type": "integer",
          "description": "Maximum number of results to return.",
          "minimum": 1,
          "default": 10
        }
      },
      "additionalProperties": false
    },
    "KnowledgeSearchToolSpec": {
      "type": "object",
      "description": "Knowledge search (RAG) tool configuration with vector store and embedder.",
      "required": ["type", "vector_store", "embedder"],
      "properties": {
        "type": {
          "type": "string",
          "const": "knowledge_search",
          "description": "Tool type identifier."
        },
        "vector_store": {
          "$ref": "#/$defs/VectorStoreConfig",
          "description": "Vector store configuration."
        },
        "embedder": {
          "$ref": "#/$defs/EmbedderConfig",
          "description": "Embedder configuration for generating embeddings."
        },
        "max_results": {
          "type": "integer",
          "description": "Maximum number of results to return from vector similarity search (top-k).",
          "minimum": 1,
          "default": 10
        },
        "min_score": {
          "type": "number",
          "description": "Minimum relevance score threshold (0.0 to 1.0).",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.0
        },
        "conditioned_filter": {
          "$ref": "#/$defs/FilterCondition",
          "description": "Static complex condition filter always applied to searches."
        },
        "agentic_filter": {
          "$ref": "#/$defs/AgenticFilterConfig",
          "description": "Enable LLM-driven dynamic filtering based on user queries."
        }
      },
      "additionalProperties": false
    },
    "FilterCondition": {
      "type": "object",
      "description": "Universal filter condition for knowledge search. Supports comparison operators (eq, ne, gt, gte, lt, lte, in, not in, like, not like, between) and logical operators (and, or).",
      "required": ["operator"],
      "oneOf": [
        { "$ref": "#/$defs/LogicalFilterCondition" },
        { "$ref": "#/$defs/ComparisonFilterCondition" },
        { "$ref": "#/$defs/BetweenFilterCondition" },
        { "$ref": "#/$defs/ArrayFilterCondition" }
      ]
    },
    "LogicalFilterCondition": {
      "type": "object",
      "description": "Logical operator condition (and/or) that combines multiple sub-conditions.",
      "required": ["operator", "value"],
      "properties": {
        "operator": {
          "type": "string",
          "enum": ["and", "or"],
          "description": "Logical operator."
        },
        "value": {
          "type": "array",
          "description": "Array of sub-conditions to combine.",
          "items": { "$ref": "#/$defs/FilterCondition" },
          "minItems": 1
        }
      },
      "additionalProperties": false
    },
    "ComparisonFilterCondition": {
      "type": "object",
      "description": "Comparison operator condition for single value comparisons.",
      "required": ["field", "operator", "value"],
      "properties": {
        "field": {
          "type": "string",
          "description": "The metadata field to filter on."
        },
        "operator": {
          "type": "string",
          "enum": ["eq", "ne", "gt", "gte", "lt", "lte", "like", "not like"],
          "description": "Comparison operator."
        },
        "value": {
          "oneOf": [
            { "type": "string" },
            { "type": "number" },
            { "type": "boolean" }
          ],
          "description": "The value to compare against."
        }
      },
      "additionalProperties": false
    },
    "BetweenFilterCondition": {
      "type": "object",
      "description": "Between operator condition for range comparisons.",
      "required": ["field", "operator", "value"],
      "properties": {
        "field": {
          "type": "string",
          "description": "The metadata field to filter on."
        },
        "operator": {
          "type": "string",
          "const": "between",
          "description": "Between operator."
        },
        "value": {
          "type": "array",
          "description": "Array of exactly 2 values representing [min, max] range.",
          "items": {
            "oneOf": [
              { "type": "string" },
              { "type": "number" }
            ]
          },
          "minItems": 2,
          "maxItems": 2
        }
      },
      "additionalProperties": false
    },
    "ArrayFilterCondition": {
      "type": "object",
      "description": "Array operator condition (in/not in) for matching against multiple values.",
      "required": ["field", "operator", "value"],
      "properties": {
        "field": {
          "type": "string",
          "description": "The metadata field to filter on."
        },
        "operator": {
          "type": "string",
          "enum": ["in", "not in"],
          "description": "Array operator."
        },
        "value": {
          "type": "array",
          "description": "Array of values to match against.",
          "items": {
            "oneOf": [
              { "type": "string" },
              { "type": "number" },
              { "type": "boolean" }
            ]
          },
          "minItems": 1
        }
      },
      "additionalProperties": false
    },
     "AgenticFilterConfig": {
      "type": "object",
      "description": "Configuration for LLM-driven dynamic metadata filtering.",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether to enable agentic filtering.",
          "default": true
        },
        "info": {
          "type": "object",
          "description": "Available metadata fields and their possible values for LLM to construct filters. Keys are field names, values are arrays of possible values.",
          "additionalProperties": {
            "type": "array",
            "items": {
              "oneOf": [
                { "type": "string" },
                { "type": "number" },
                { "type": "boolean" }
              ]
            }
          }
        }
      },
      "additionalProperties": false
    },
    "VectorStoreConfig": {
      "type": "object",
      "description": "Vector store configuration. Use 'type' to specify the vector store backend.",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["pgvector", "milvus", "elasticsearch", "tcvector"],
          "description": "Vector store type identifier."
        }
      },
      "oneOf": [
        { "$ref": "#/$defs/PgVectorConfig" },
        { "$ref": "#/$defs/MilvusConfig" },
        { "$ref": "#/$defs/ElasticsearchConfig" },
        { "$ref": "#/$defs/TCVectorConfig" }
      ]
    },
    "PgVectorConfig": {
      "type": "object",
      "description": "PostgreSQL pgvector configuration.",
      "required": ["type", "host", "user", "password", "database"],
      "properties": {
        "type": {
          "type": "string",
          "const": "pgvector",
          "description": "Vector store type identifier."
        },
        "host": { "type": "string" },
        "port": { "type": "integer", "default": 5432 },
        "user": { "type": "string" },
        "password": { "type": "string", "description": "Supports env:VAR_NAME format." },
        "database": { "type": "string" },
        "table": { "type": "string", "default": "documents" },
        "dimension": { "type": "integer", "default": 1536 },
        "ssl_mode": { "type": "string", "default": "disable" }
      },
      "additionalProperties": false
    },
    "MilvusConfig": {
      "type": "object",
      "description": "Milvus vector database configuration.",
      "required": ["type", "address", "collection"],
      "properties": {
        "type": { "type": "string", "const": "milvus" },
        "address": { "type": "string" },
        "collection": { "type": "string" },
        "dimension": { "type": "integer", "default": 1536 }
      },
      "additionalProperties": false
    },
    "ElasticsearchConfig": {
      "type": "object",
      "description": "Elasticsearch vector configuration.",
      "required": ["type", "addresses", "index"],
      "properties": {
        "type": { "type": "string", "const": "elasticsearch" },
        "addresses": { "type": "array", "items": { "type": "string" } },
        "index": { "type": "string" },
        "dimension": { "type": "integer", "default": 1536 }
      },
      "additionalProperties": false
    },
    "TCVectorConfig": {
      "type": "object",
      "description": "Tencent Cloud VectorDB configuration.",
      "required": ["type", "url", "user", "password", "database", "collection"],
      "properties": {
        "type": { "type": "string", "const": "tcvector" },
        "url": { "type": "string", "description": "TCVector URL. Supports env:VAR_NAME format." },
        "user": { "type": "string", "description": "Username. Supports env:VAR_NAME format." },
        "password": { "type": "string", "description": "Password. Supports env:VAR_NAME format." },
        "database": { "type": "string" },
        "collection": { "type": "string" },
        "dimension": { "type": "integer", "default": 1536 }
      },
      "additionalProperties": false
    },
    "EmbedderConfig": {
      "type": "object",
      "description": "Embedder configuration. Use 'type' to specify the embedder provider.",
      "required": ["type"],
      "oneOf": [
        { "$ref": "#/$defs/OpenAIEmbedderConfig" },
        { "$ref": "#/$defs/OllamaEmbedderConfig" },
        { "$ref": "#/$defs/GeminiEmbedderConfig" },
        { "$ref": "#/$defs/HuggingFaceEmbedderConfig" }
      ]
    },
    "OpenAIEmbedderConfig": {
      "type": "object",
      "description": "OpenAI embedder configuration.",
      "required": ["type", "api_key"],
      "properties": {
        "type": { "type": "string", "const": "openai" },
        "api_key": { "type": "string", "description": "Supports env:VAR_NAME format." },
        "base_url": { "type": "string", "description": "Optional base URL for OpenAI-compatible APIs." },
        "model": { "type": "string", "default": "text-embedding-3-small" },
        "dimensions": { "type": "integer", "default": 1536 }
      },
      "additionalProperties": false
    },
    "OllamaEmbedderConfig": {
      "type": "object",
      "description": "Ollama embedder configuration.",
      "required": ["type", "base_url", "model"],
      "properties": {
        "type": { "type": "string", "const": "ollama" },
        "base_url": { "type": "string" },
        "model": { "type": "string" }
      },
      "additionalProperties": false
    },
    "GeminiEmbedderConfig": {
      "type": "object",
      "description": "Google Gemini embedder configuration.",
      "required": ["type", "api_key"],
      "properties": {
        "type": { "type": "string", "const": "gemini" },
        "api_key": { "type": "string", "description": "Google API key. Supports env:VAR_NAME format." },
        "model": { "type": "string", "default": "gemini-embedding-exp-03-07", "description": "Gemini embedding model (e.g., gemini-embedding-exp-03-07, gemini-embedding-001)." },
        "dimensions": { "type": "integer", "default": 1536, "description": "Output embedding dimensions." }
      },
      "additionalProperties": false
    },
    "HuggingFaceEmbedderConfig": {
      "type": "object",
      "description": "HuggingFace Text-Embeddings-Inference (TEI) embedder configuration.",
      "required": ["type", "base_url"],
      "properties": {
        "type": { "type": "string", "const": "huggingface" },
        "base_url": { "type": "string", "description": "TEI server URL (e.g., http://localhost:8080)." },
        "dimensions": { "type": "integer", "default": 1024, "description": "Output embedding dimensions." },
        "normalize": { "type": "boolean", "default": false, "description": "Whether to normalize embeddings." },
        "prompt_name": { "type": "string", "description": "Name of the prompt to use." },
        "truncate": { "type": "boolean", "default": false, "description": "Whether to truncate the text." },
        "truncation_direction": { "type": "string", "enum": ["Left", "Right"], "default": "Right", "description": "Truncation direction." },
        "embed_route": { "type": "string", "enum": ["/embed", "/embed_all"], "default": "/embed", "description": "Embedding endpoint route." }
      },
      "additionalProperties": false
    },
    "CodeInterpreterToolSpec": {
      "type": "object",
      "description": "Code interpreter tool configuration.",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "const": "code_interpreter",
          "description": "Tool type identifier."
        },
        "executor": {
          "$ref": "#/$defs/ExecutorConfig",
          "description": "Code executor configuration. Defaults to local executor."
        }
      },
      "additionalProperties": false
    },
    "ExecutorConfig": {
      "type": "object",
      "description": "Code executor configuration.",
      "required": ["type"],
      "oneOf": [
        { "$ref": "#/$defs/LocalExecutorConfig" },
        { "$ref": "#/$defs/ContainerExecutorConfig" }
      ]
    },
    "LocalExecutorConfig": {
      "type": "object",
      "description": "Local code executor configuration.",
      "required": ["type"],
      "properties": {
        "type": { "type": "string", "const": "local" },
        "work_dir": { "type": "string" },
        "timeout_seconds": { "type": "integer", "minimum": 1, "default": 30 },
        "clean_temp_files": { "type": "boolean", "default": true }
      },
      "additionalProperties": false
    },
    "ContainerExecutorConfig": {
      "type": "object",
      "description": "Container-based code executor configuration.",
      "required": ["type", "image"],
      "properties": {
        "type": { "type": "string", "const": "container" },
        "image": { "type": "string" },
        "timeout_seconds": { "type": "integer", "minimum": 1, "default": 60 }
      },
      "additionalProperties": false
    },
    "ModelSpec": {
      "type": "object",
      "required": ["provider", "model_name", "api_key"],
      "properties": {
        "provider": {
          "type": "string",
          "description": "Model provider name (e.g., \"openai\", \"anthropic\")."
        },
        "model_name": {
          "type": "string",
          "description": "Concrete model name understood by the provider (e.g., \"deepseek-chat\", \"gpt-4o\")."
        },
        "base_url": {
          "type": "string",
          "description": "Optional base URL override for provider requests."
        },
        "api_key": {
          "type": "string",
          "description": "Provider API key. Supports env:VAR_NAME format."
        },
        "headers": {
          "type": "object",
          "description": "Optional static HTTP headers for provider requests.",
          "additionalProperties": { "type": "string" }
        },
        "extra_fields": {
          "type": "object",
          "description": "Provider-specific extra fields serialized into request payloads.",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "EndConfig": {
      "type": "object",
      "properties": {
        "output_schema": {
          "type": "object",
          "description": "JSON Schema for the structured final output.",
          "additionalProperties": true
        },
        "expr": {
          "$ref": "#/$defs/Expression",
          "description": "Expression that evaluates to the structured final output."
        }
      },
      "additionalProperties": false
    },
    "TransformConfig": {
      "type": "object",
      "properties": {
        "output_schema": {
          "type": "object",
          "description": "JSON Schema for the transformed output object.",
          "additionalProperties": true
        },
        "expr": {
          "$ref": "#/$defs/Expression",
          "description": "Expression that evaluates to the transformed object."
        }
      },
      "additionalProperties": false
    },
    "SetStateConfig": {
      "type": "object",
      "properties": {
        "assignments": {
          "type": "array",
          "description": "List of {field, expr} objects describing state updates.",
          "items": {
            "type": "object",
            "required": ["field", "expr"],
            "properties": {
              "field": { "type": "string" },
              "expr": { "$ref": "#/$defs/Expression" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "UserApprovalConfig": {
      "type": "object",
      "description": "Configuration for a human-in-the-loop approval step.",
      "required": ["message"],
      "properties": {
        "message": {
          "type": "string",
          "description": "Approval message shown to the user."
        },
        "auto_approve": {
          "type": "boolean",
          "description": "When true, skip the interrupt and treat the decision as approved."
        }
      },
      "additionalProperties": false
    },
    "WhileBody": {
      "type": "object",
      "required": ["nodes", "edges", "start_node_id", "exit_node_id"],
      "properties": {
        "nodes": { "type": "array", "items": { "$ref": "#/$defs/Node" } },
        "edges": { "type": "array", "items": { "$ref": "#/$defs/Edge" } },
        "conditional_edges": { "type": "array", "items": { "$ref": "#/$defs/ConditionalEdge" } },
        "start_node_id": { "type": "string" },
        "exit_node_id": { "type": "string" }
      },
      "additionalProperties": false
    },
    "WhileConfig": {
      "type": "object",
      "required": ["body", "condition"],
      "properties": {
        "body": { "$ref": "#/$defs/WhileBody" },
        "condition": { "$ref": "#/$defs/Expression" },
        "max_iterations": { "type": "integer", "minimum": 1 }
      },
      "additionalProperties": false
    },
    "MCPConfig": {
      "type": "object",
      "description": "Configuration for a standalone MCP node that calls a single MCP tool.",
      "required": ["server_url", "tool"],
      "properties": {
        "server_url": { "type": "string" },
        "tool": { "type": "string" },
        "transport": { "type": "string", "enum": ["streamable_http", "sse"] },
        "headers": { "type": "object", "additionalProperties": { "type": "string" } },
        "input_schema": { "type": "object", "additionalProperties": true },
        "output_schema": { "type": "object", "additionalProperties": true },
        "params": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/Expression" }
        }
      },
      "additionalProperties": false
    },
    "KnowledgeSearchConfig": {
      "type": "object",
      "description": "Configuration for a standalone Knowledge Search node that performs vector similarity search.",
      "required": ["query", "vector_store", "embedder"],
      "properties": {
        "query": {
          "$ref": "#/$defs/Expression",
          "description": "CEL Expression that evaluates to the search query string. Can reference input.* variables from upstream node."
        },
        "max_results": {
          "type": "integer",
          "description": "Maximum number of search results to return (top-k).",
          "minimum": 1,
          "default": 10
        },
        "min_score": {
          "type": "number",
          "description": "Minimum similarity score threshold (0.0-1.0).",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.0
        },
        "vector_store": {
          "$ref": "#/$defs/VectorStoreConfig",
          "description": "Vector store configuration."
        },
        "embedder": {
          "$ref": "#/$defs/EmbedderConfig",
          "description": "Embedder configuration for generating query embeddings."
        },
        "conditioned_filter": {
          "$ref": "#/$defs/FilterCondition",
          "description": "Optional static complex condition filter for search results."
        },
        "input_schema": {
          "type": "object",
          "description": "Optional explicit input schema (typically inferred from edge inspection).",
          "additionalProperties": true
        },
        "output_schema": {
          "type": "object",
          "description": "Optional output schema override (defaults to framework Knowledge Search format).",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "Edge": {
      "type": "object",
      "required": ["source", "target"],
      "properties": {
        "id": { "type": "string" },
        "source": { "type": "string" },
        "target": { "type": "string" },
        "label": { "type": "string" }
      },
      "additionalProperties": false
    },
    "ConditionalEdge": {
      "type": "object",
      "required": ["from", "condition"],
      "properties": {
        "id": { "type": "string" },
        "from": { "type": "string" },
        "condition": { "$ref": "#/$defs/Condition" }
      },
      "additionalProperties": false
    },
    "Condition": {
      "type": "object",
      "required": ["cases"],
      "properties": {
        "cases": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/Case" }
        },
        "default": { "type": "string" }
      },
      "additionalProperties": false
    },
    "Case": {
      "type": "object",
      "required": ["predicate", "target"],
      "properties": {
        "name": { "type": "string" },
        "predicate": { "$ref": "#/$defs/Expression" },
        "target": { "type": "string" }
      },
      "additionalProperties": false
    },
    "Expression": {
      "type": "object",
      "required": ["expression"],
      "properties": {
        "expression": { "type": "string" },
        "format": { "type": "string", "enum": ["cel"], "default": "cel" }
      },
      "additionalProperties": false
    },
    "StateVariable": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string" },
        "kind": { "type": "string", "enum": ["string", "number", "boolean", "object", "array", "opaque"] },
        "json_schema": { "type": "object", "additionalProperties": true },
        "description": { "type": "string" },
        "default": {},
        "reducer": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "properties": {
    "graph": { "$ref": "#/$defs/Graph" }
  }
}
